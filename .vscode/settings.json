{
    // PHP Intelephense設定
    "intelephense.environment.phpVersion": "8.3.0",
    "intelephense.environment.includePaths": [
        "${workspaceFolder}/src",
        "${workspaceFolder}/src/vendor"
    ],
    "intelephense.files.associations": [
        "*.php",
        "*.phtml"
    ],
    "intelephense.files.exclude": [
        "**/vendor/**",
        "**/node_modules/**",
        "**/.git/**",
        "**/.svn/**",
        "**/.hg/**",
        "**/CVS/**",
        "**/.DS_Store/**",
        "**/bower_components/**",
        "**/storage/**",
        "**/bootstrap/cache/**"
    ],
    "intelephense.stubs": [
        "apache",
        "bcmath",
        "bz2",
        "calendar",
        "com_dotnet",
        "Core",
        "ctype",
        "curl",
        "date",
        "dba",
        "dom",
        "enchant",
        "exif",
        "FFI",
        "fileinfo",
        "filter",
        "fpm",
        "ftp",
        "gd",
        "gettext",
        "gmp",
        "hash",
        "iconv",
        "imap",
        "intl",
        "json",
        "ldap",
        "libxml",
        "mbstring",
        "meta",
        "mysqli",
        "oci8",
        "odbc",
        "openssl",
        "pcntl",
        "pcre",
        "PDO",
        "pdo_ibm",
        "pdo_mysql",
        "pdo_pgsql",
        "pdo_sqlite",
        "pgsql",
        "Phar",
        "posix",
        "pspell",
        "readline",
        "Reflection",
        "session",
        "shmop",
        "SimpleXML",
        "snmp",
        "soap",
        "sockets",
        "sodium",
        "SPL",
        "sqlite3",
        "standard",
        "superglobals",
        "sysvmsg",
        "sysvsem",
        "sysvshm",
        "tidy",
        "tokenizer",
        "xml",
        "xmlreader",
        "xmlrpc",
        "xmlwriter",
        "xsl",
        "Zend OPcache",
        "zip",
        "zlib"
    ],

    // PHPファイルのフォーマット設定
    "[php]": {
        "editor.defaultFormatter": "bmewburn.vscode-intelephense-client",
        "editor.formatOnSave": false,
        "editor.tabSize": 4,
        "editor.insertSpaces": true
    },

    // Bladeファイルの設定
    "[blade]": {
        "editor.autoClosingBrackets": "always",
        "editor.tabSize": 4
    },

    // ファイル関連付け
    "files.associations": {
        "*.blade.php": "blade",
        ".env.example": "dotenv",
        ".phpstorm.meta.php": "php"
    },

    // 検索除外設定
    "search.exclude": {
        "**/node_modules": true,
        "**/bower_components": true,
        "**/vendor": true,
        "**/.git": true,
        "**/storage": true,
        "**/bootstrap/cache": true,
        "**/_ide_helper.php": true,
        "**/_ide_helper_models.php": true,
        "**/.phpstorm.meta.php": true
    },

    // ファイル監視除外
    "files.watcherExclude": {
        "**/vendor/**": true,
        "**/node_modules/**": true,
        "**/storage/**": true,
        "**/bootstrap/cache/**": true
    }
}
